{
  "name": "incognito",
  "version": "0.1.0",
  "manifest_version": 2,

  "description": "Incognito. Open current tab in incognito mode.",

  "icons": {
    "16": "icons/incognito16.png",
    "32": "icons/incognito32.png",
    "48": "icons/incognito48.png",
    "128": "icons/incognito128.png"
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/incognito32.png",
    "default_title": "Click to open current tab in incognito mode."
  }
}
